{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "./lib"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "tests"]
}